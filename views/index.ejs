<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-zinc-900 text-white h-screen flex items-center justify-center">
    <div class="w-full max-w-md p-8 space-y-8 bg-zinc-800 rounded-lg shadow-lg">
      <!-- Form Heading -->
      <h2 class="text-3xl font-bold text-center">Create Account</h2>

      <!-- Login Form -->

      <!-- Username Input -->
      <form method="post" action="/create" class="space-y-6">
        <div>
          <label for="username" class="block mb-2 text-sm font-medium"
            >Username</label
          >
          <input
            id="username"
            name="username"
            type="text"
            required
            class="w-full px-4 py-2 text-sm bg-zinc-900 border border-zinc-700 rounded-md focus:ring-blue-500 focus:border-blue-500 placeholder-zinc-500"
            placeholder="Enter your username" />
        </div>

        <!-- Username/Email Input -->
        <div>
          <label for="email" class="block mb-2 text-sm font-medium"
            >Email</label
          >
          <input
            id="email"
            name="email"
            type="email"
            required
            class="w-full px-4 py-2 text-sm bg-zinc-900 border border-zinc-700 rounded-md focus:ring-blue-500 focus:border-blue-500 placeholder-zinc-500"
            placeholder="Enter your email" />
        </div>

        <!-- Password Input -->
        <div>
          <label for="password" class="block mb-2 text-sm font-medium"
            >Password</label
          >
          <input
            id="password"
            name="password"
            type="password"
            required
            class="w-full px-4 py-2 text-sm bg-zinc-900 border border-zinc-700 rounded-md focus:ring-blue-500 focus:border-blue-500 placeholder-zinc-500"
            placeholder="Enter your password" />
        </div>

        <!-- Age Input -->
        <div>
          <label for="Age" class="block mb-2 text-sm font-medium">Age</label>
          <input
            id="age"
            name="age"
            type="number"
            required
            class="w-full px-4 py-2 text-sm bg-zinc-900 border border-zinc-700 rounded-md focus:ring-blue-500 focus:border-blue-500 placeholder-zinc-500"
            placeholder="Enter your username" />
        </div>

        <!-- Mobile Input -->
        <div>
          <label for="mobile" class="block mb-2 text-sm font-medium"
            >Mobile</label
          >
          <input
            id="mobile"
            name="mobile"
            type="tel"
            required
            class="w-full px-4 py-2 text-sm bg-zinc-900 border border-zinc-700 rounded-md focus:ring-blue-500 focus:border-blue-500 placeholder-zinc-500"
            placeholder="Enter your username" />
        </div>

        <!-- Remember Me Checkbox -->
        <!-- <div class="flex items-center">
          <input
